<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="#d8d8d8"
    card_view:cardCornerRadius="5dp"
    android:layout_height="170dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_insert_drive_file_black_24dp"
                android:background="@drawable/circlebackgroundorange"
                android:id="@+id/exp_resume_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="10dp"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/exp_reume_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="resume"
                tools:ignore="HardcodedText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="@color/lightgray">
            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/exp_view"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/circlebackgroundblue"
                    android:src="@drawable/ic_remove_red_eye_black_24dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/exp_download"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/circlebackgroundamber"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/exp_share"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:background="@drawable/circlebackgroundorange"
                    android:src="@drawable/ic_share_black_24dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

